[
  {
    "defaults": {
      "link": {
        "create": true,
        "relink": true,
        "force": true
      }
    }
  },
  {
    "shell": [
      ["rm -rf ~/.oh-my-zsh", "Removing Oh My Zsh configs"],
      ["npm install -g spaceship-prompt", "Installing Spaceship prompt"],
      [
        "sh -c \"$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)\"",
        "Installing Oh My Zsh"
      ]
    ]
  },
  {
    "link": {
      "~/.zshrc": "shells/zsh/.zshrc",
      "~/.oh-my-zsh/custom/aliases.zsh": "shells/zsh/custom/aliases.zsh",
      "~/.oh-my-zsh/custom/exports.zsh": "shells/zsh/custom/exports.zsh",
      "~/.oh-my-zsh/custom/external.zsh": "shells/zsh/custom/external.zsh",
      "~/.oh-my-zsh/custom/functions.zsh": "shells/zsh/custom/functions.zsh"
    }
  }
]
